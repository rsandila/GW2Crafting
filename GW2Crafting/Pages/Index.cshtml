@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>Guild Wars 2 Crafting - @ViewData["Title"]</h1>    
</div>
<div class="container-fluid" id="app">
    <form method="post">
        <span class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Access Token:</span>
            <input type="text" class="form-control" placeholder="AccessToken" aria-label="AccessToken" aria-describedby="basic-addon1" id="AccessToken" name="AccessToken">
        </span>
        <div class="container-fluid">
            @foreach (var option in Enum.GetValues(typeof(GW2Crafting.Models.MainListType)))
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" value="@option" checked="@(Model.Selection.ListType == (GW2Crafting.Models.MainListType)option)" name="Selection.ListType" id="@option">
                    <label class="form-check-label" for="@option">@option</label>
                </div>
            }
        </div>
        <div class="row justify-content-end">
          <div class="col-4"></div>
          <div class="col-1"><input class="btn btn-primary" type="submit"/></div>
        </div>
    </form>
</div>
